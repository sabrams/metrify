<h1><%= chart_name %>:</h1>
<div class="metrify_chart">
  <table cellpadding="0" cellspacing="0" border="1px solid #ccc" border-width="0 1px 1px 0">
    <thead> 
      <tr>
        <td align="center" font-weight="bold" background-color="#ddd" padding="5px">Finish Date</td>
        <% metrified_class.sorted_stat_names.each do |s| %>
          <td background-color="#ddd" align="center">
            <%= metrified_class.display_name(s) %>
          </td>
        <% end %>  
      </tr>
    </thead>
    <tbody>
      <% chart.each do |stat| %>
        <tr>
          <td align="center"><%= stat.finish_time %></td>
          <% metrified_class.sorted_stat_names.each do |s| %>
            <% idx = chart.index(stat); last = chart.last == stat %>
          <td align="center"><%= print_stat_value(stat, s, last ? nil : chart[idx+1]) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>